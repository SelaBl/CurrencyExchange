<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <TextView
        android:id="@+id/currency_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/CurrencyListItemStyle"
        android:text="name"/>

    <TextView
        android:id="@+id/currency_unit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/CurrencyListItemStyle"
        android:layout_toRightOf="@+id/currency_name"
        android:text="unit"/>

    <TextView
        android:id="@+id/currency_code"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/CurrencyListItemStyle"
        android:layout_toRightOf="@+id/currency_unit"
        android:text="code"/>

    <TextView
        android:id="@+id/currency_country"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/CurrencyListItemStyle"
        android:layout_toRightOf="@+id/currency_code"
        android:text="country"/>

    <TextView
        android:id="@+id/currency_rate"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/CurrencyListItemStyle"
        android:layout_toRightOf="@+id/currency_country"
        android:text="rate"/>

    <TextView
        android:id="@+id/currency_change"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/CurrencyListItemStyle"
        android:layout_toRightOf="@+id/currency_rate"
        android:text="change"/>
</RelativeLayout>